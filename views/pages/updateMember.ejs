<%- include("../partials/header") %>
<h1>Edit info</h1>
<form action="/member/update/<%= member._id %>" method="post">
  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="<%= name %>">

  <label for="email">Email</label>
  <input type="email" name="email" id="email" value="<%= email %>">

  <label for="phone">Phone Number</label>
  <input type="number" name="phoneNumber" id="phone" value="<%= phoneNumber %>">

  <label for="date">Date</label>
  <input type="date" name="dateRegistered" id="date" value="<%= dateRegistered %>">

  <label for="notes">Notes</label>
  <input type="text" name="notes" id="notes" value="<%= notes %>">

  <button>Save</button>
</form>
<%- include("../partials/footer") %>